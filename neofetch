# Detect OS {{{

case "$(uname)" in
    "Linux")   os="Linux" ;;
    "Darwin")  os="Mac OS X" ;;
    "OpenBSD") os="OpenBSD" ;;
    *"BSD")    os="BSD" ;;
    "CYGWIN"*) os="Windows" ;;
    *) printf "%s\n" "Unknown OS detected: $(uname)"; exit 1 ;;
esac

